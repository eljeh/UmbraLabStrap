<div class="jumbotron jumbotron-fluid" style="background-image: url({{banner.background-image}});">

    <div class="container">
        {{> atoms-heading:white }}
        <p>{{ banner.content }}</p>
    </div>

    <div class="container">
        <form method="post" action="http://www.google.ca">
            <div class="row">
                <div class="col-sm-12 col-md-4 col-lg-5">
                    {{> atoms-input-text:form-control|form-control-lg(form-field-text-placeholder:"Choose Your City")}}
                </div>
                <div class="col-sm-6 col-md-3">
                    {{> atoms-select:form-control|form-control-lg(form-field-select-placeholder:"Suite Type")}}
                </div>
                <div class="col-sm-6 col-md-3">
                    {{> atoms-select:form-control|form-control-lg(form-field-select-placeholder:"Your Budget")}}
                </div>
                <div class="col-sm-12 col-md-2 col-lg-1">
                    {{> atoms-primary-icon-button:d-none|d-md-block}}
                    {{> atoms-primary-button-submit:d-sm-block|d-md-none(primary-button-text:'Foo')}}
                </div>
            </div> <!--/.row-->
            <div class="row">
                <div class="col-md-12 text-center">
                    {{> atoms-arrow-link:white(arrow-link-text:"Advanced Search")}}
                </div>
            </div> <!--/.row-->
        </form>
    </div> <!--/.container-->

</div> <!--/.jumbotron-->
