<div id="mobile-nav-container">
    <header class="mobile-header d-flex justify-content-between">
        <div class="d-flex align-items-center mobile-header__logo">{{>atoms-logo}}</div>
        <div class="d-flex align-items-center">{{>atoms-close-button}}</div>
    </header> <!--/.mobile-header-->
    {{>atoms-hr:lightblue}}
    <ul class="ul-mobile-nav" id="accordion" role="tablist" aria-multiselectable="true">
        <li>{{>molecules-search-container(form-field-search-placeholder:"Search")}}</li>
        <li class=""> <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#ul-mobile-nav__find" aria-expanded="false" aria-controls="ul-mobile-nav__find">Find Your Home <i class="icon-ctrl"></i></a>
