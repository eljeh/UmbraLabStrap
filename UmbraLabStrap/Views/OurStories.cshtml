@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.OurStories>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Layout.cshtml";
}

@Html.Partial("~/views/partials/jumbotron.cshtml")

<div class="container">
    @Html.Partial("~/views/partials/filter-tabs.cshtml")
</div>

@Html.Partial("~/views/partials/half-and-half.cshtml")



<section class="multi-columns">
    <div class="container">

        <div class="column-wrapper">

            @Html.Partial("~/views/partials/cta-card.cshtml")

            @Html.Partial("~/views/partials/cta-card.cshtml")

            @Html.Partial("~/views/partials/cta-card.cshtml")

        </div>


    </div>
    <!-- /.container -->
</section>
<!--/.multi-columns-->

<section class="multi-columns">
    <div class="container">

        <div class="column-wrapper">

            @Html.Partial("~/views/partials/excerpt-card.cshtml")

            @Html.Partial("~/views/partials/excerpt-card.cshtml")

        </div>


    </div>
    <!-- /.container -->
</section>
<!--/.multi-columns-->

<section class="multi-columns">
    <div class="container">

        <div class="column-wrapper">

            @Umbraco.RenderMacro("LatestStories",
                 new
                 {
                     numberOfPosts = Model.Content.HowManyPostsShouldBeShown,
                     startNodeId = Model.Content.Id
                 })
        </div>


    </div>
    <!-- /.container -->
</section>
<!--/.multi-columns-->
