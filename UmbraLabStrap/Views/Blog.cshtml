@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Blog>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Layout.cshtml";
}

@Html.Partial("~/views/partials/jumbotron.cshtml")

<div class="container">
    @Html.Partial("~/views/partials/filter-tabs.cshtml")
</div>

@Html.Partial("~/views/partials/half-and-half.cshtml")

<section>

    <div class="container">

        @Umbraco.RenderMacro("latestBlogposts",
                 new
                 {
                     numberOfPosts = Model.Content.HowManyPostsShouldBeShown,
                     startNodeId = Model.Content.Id
                 })
    </div>

</section>