<!-- Panels for push down navigation from main nav -->
{{>organisms-panel-find-your-home}}
{{>organisms-panel-investors}}
{{>organisms-panel-search}}
{{>organisms-mobile-navigation}}

<div class="wrapper">

    {{> organisms-header}}

    {{> molecules-jumbotron:vertical-center|jumbotron-medium}}

    <div class="container-fluid bg-darkblue">
        <div class="row">
            <div class="col-md-12">
                {{>organisms-icon-navigation:icon-navigation|d-flex|flex-row|justify-content-between|align-items-start|flex-wrap|white}}
            </div>
        </div> <!--/.row-->
    </div>

    <main>

        <section class="multi-columns">

            <div class="container">

                <h2 class="secondary-heading">
                    Press Releases - 2018
                </h2>

                <div class="column-wrapper">
                    {{# listItems.six }}
                        {{> molecules-excerpt-card }}
                    {{/ listItems.six }}
                </div>

                <h2 class="secondary-heading">
                Press Releases - 2017
                </h2>

                <div class="column-wrapper">
                    {{# listItems.seventeen }}
                        {{> molecules-excerpt-card }}
                    {{/ listItems.seventeen }}
                </div>

            </div><!-- /.container -->

        </section> <!--/.multi-columns-->

    </main>

    {{> organisms-footer}}

</div> <!--/.wrapper-->