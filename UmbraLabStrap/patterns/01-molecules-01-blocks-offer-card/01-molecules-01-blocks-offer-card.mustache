<div class="offer-card">
  {{# offerNotice }}
  <div class="offer-card-notice-bar">
    Offer Ends Soon
  </div>
  <!-- /.offer-notice-bar -->
  {{/ offerNotice }}

  <div class="offer-card-content">
    <div class="offer-text">
      <h3 class="offer-card-title">2 Bedroom Premium</h3>
      <h4 class="offer-card-availability">Available</h4>

      <p class="offer-card-price">
        <span class="dollar-sign">$</span>1427-<span class="dollar-sign">$</span>2290<sub>/MO</sub>
      </p>

      <ul class="offer-card-quick-features">
        <li><span class="quick-feature">bathrooms:</span><span class="dots"></span><span class="feature-value">1-1.5</span></li>
        <li><span class="quick-feature">Sq Ft:</span><span class="dots"></span><span class="feature-value">937-1143</span></li>
        <li><span class="quick-feature">Deposit:</span><span class="dots"></span><span class="feature-value"><span class="dollar-sign">$</span>499</span>
        </li>
        {{# extraContent }}
        <li><span class="quick-feature">bathrooms:</span><span class="dots"></span><span class="feature-value">1-1.5</span></li>
        <li><span class="quick-feature">Sq Ft:</span><span class="dots"></span><span class="feature-value">937-1143</span></li>
        <li><span class="quick-feature">Deposit:</span><span class="dots"></span><span class="feature-value"><span class="dollar-sign">$</span>499</span>
        </li>
        {{/ extraContent }}
      </ul>
      <!-- /.offer-card-quick-features -->
    </div>
    <!-- /.offer-text -->

    {{> atoms-primary-button:blue(primary-button-text:"Experience Lifestyles") }}
  </div>
  <!-- /.offer-card-content -->

  {{> atoms-arrow-link:blue(arrow-link-url: "#", arrow-link-text: "Offer to Lease Form") }}
</div>
<!-- /.offer-card -->